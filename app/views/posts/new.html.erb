<div class="col-md-12">

  <h1>記事投稿</h1>
  <br>
  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
      <%= form.label "タイトル" %><br>
      <%= form.text_field :title, class: "input-mysize" %>
    </div>
    <div class="form-group">
      <%= form.label "本文" %><br>
      <%= form.text_area :body, class: "input-mysize2" %>
    </div>
    <%= form.submit '登録する', data: { confirm: "登録しますか？" }, class: "btn btn-primary" %>
  <% end %>

</div>
