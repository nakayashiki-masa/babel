<div class="col-md-12">
  <h1>プロジェクト更新</h1>
  <h2>タイトル</h2>
    <%= @post.title %>
  <h2>本文</h2>
    <%= simple_format(@post.body) %>
    <%= form_with model: @post, local: true do |form| %>
      <div class="form-group">
        <%= form.label " " %>
        <br>
        <%= form.text_area :body, value: "", class: "input-mysize2" %>
      </div>
        <%= form.submit '更新する', data: { confirm: "更新しますか？" }, class: "btn btn-primary" %>
    <% end %>
</div>
